{
  "name": "server",
  "version": "1.0.0",
  "description": "Recipe manager server",
  "private": true,
  "main": "build/index.js",
  "scripts": {
    "dev": "tsx watch --env-file=../.env src/index.ts",
    "build": "npx tsc",
    "serve": "npx tsc && node --env-file=../.env build/index.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test-watch": "jest --watch",
    "migrate:up": "node-pg-migrate --migration-file-language sql -m migrations up",
    "migrate:down": "node-pg-migrate --migration-file-language sql -m migrations down",
    "migrate:create": "node-pg-migrate --migration-file-language sql -m migrations create"
  },
  "author": "Albert",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "5.0.1",
    "cors": "2.8.5",
    "dotenv": "16.0.2",
    "express": "4.18.1",
    "jsonwebtoken": "8.5.1",
    "morgan": "1.10.0",
    "node-pg-migrate": "8.0.4",
    "nodemailer": "6.8.0",
    "pg": "8.8.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.14",
    "@types/jest": "29.1.0",
    "@types/jsonwebtoken": "8.5.9",
    "@types/morgan": "1.9.3",
    "@types/nodemailer": "6.4.6",
    "@types/pg": "8.6.5",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "8.22.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "jest": "29.1.1",
    "node-mocks-http": "1.11.0",
    "supertest": "6.2.4",
    "ts-jest": "29.0.3",
    "tsx": "4.20.5",
    "typescript": "4.8.4"
  }
}
